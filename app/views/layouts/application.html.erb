<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>MyBlog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <section class="row-fluid">
    <section class="base span7">
      <%= @user.try('persisted?') ? logout_link : registration_link %>
      <%= render('layouts/nav') if @article.try('persisted?') %>

      <section class="blinks">
        <%= yield %>
      </section>
    </section>

    <%= render('layouts/aside') if @last_articles %>
  </section>
</body>

</html>
