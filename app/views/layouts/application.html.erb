<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>MyBlog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
  <section class="row-fluid">
    <section class="base span7">

      <%= render('layouts/nav') if @article.try('persisted?') %>

      <%= yield %>

    </section>

    <% if @last_articles %>
      <aside class="span4 offset1">
        <% @last_articles.each do |article| %>
          <%= link_to(article) do %>
            <h6><%= article.title %></h6>
            <p><%= truncate(article.body, length: 100) %></p>
          <% end %>
        <% end %>
      </aside>
    <% end %>

  </section>

</body>

</html>
