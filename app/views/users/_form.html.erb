<%= form_for @user, url: user_path do |form| %>
  <!-- <legend>Add new user</legend> -->

  <%= label('user','name') %>
  <%= form.text_field :name, placeholder: "Имя пользователя" %>

  <%= label('user','password') %>
  <%= form.password_field :password, placeholder: "Введите пароль" %>

  <%= label('user','password_confirmation') %>
  <%= form.password_field :password_confirmation,
    placeholder: "Повторите пароль" %>

  <%= form.submit class: 'btn' %>
<% end %>