<%= render 'new' %>

<% @comments.each do |comment| %>
  <span><%= comment.created_at.getlocal.strftime "%D %R" %></span>

  <div class="comment">
    <h6><%= comment.user.name.capitalize %>: <%= comment.title %></h6>
    <p><%= comment.body %></p>

    <% if @user.try( 'owner?', comment )
      concat link_to 'Delete', article_comment_path( @article, comment ),
        method: 'delete', class: 'btn'
     end %>
  </div>
<% end %>