<%= render partial: 'layouts/alert', collection: flash[:alert] %>

<%= form_for [@article, @comment],
      html: { autocomplete: 'off', 'data-type' => :html },
      remote: true do |form| %>
  <%= form.hidden_field :parent_id, value: @parent_id %>
  <%= form.text_area  :body ,
        placeholder: t('defaults.use_markdown'), rows: 5  %>
  <%= form.submit class: 'btn' %>
<% end %>