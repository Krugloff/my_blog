<%= render partial: 'layouts/alert', collection: flash[:alert] %>
<%= form_for @article, remote: ( action_name == 'edit' ) do |form| %>
  <%= form.text_field :title, placeholder: t('articles.title') %>
  <%= form.text_area  :body , placeholder: t('defaults.use_markdown') %>
  <div>
    <%= form.submit class: 'btn' %>
    <%= form.submit t('defaults.preview'),
          formaction: preview_articles_path,
          class: 'btn preview' %>
  </div>
<% end %>