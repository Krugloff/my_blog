<article>
  <a class="created_at pull-right"
     href='<%= articles_path month: @article.created_at.month,
                             year: @article.created_at.year %>' >

    <div><%= @article.created_at.strftime "%^h" %></div>
    <div><%= @article.created_at.day %></div>
  </a>

  <h1><%= @article.title %></h1>
  <div><%= @article.body %></div>
</article>

<% if @user.try( 'owner?', @article ) %>
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn' %>
  <%= link_to 'Delete', @article, method: 'delete', class: 'btn' %>
<% end %>