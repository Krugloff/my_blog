<%= render partial: 'layouts/alert', collection: flash[:alert] %>

<%= form_tag session_path, class: 'form-horizontal' do %>
  <%= control_group 'Name',
        text_field_tag( :name, nil, placeholder: 'Name', required: true ) %>

  <%= control_group 'Password',
        password_field_tag( :password, nil, placeholder: 'Password',
          required: true ) %>

  <%= control_group nil, submit_tag( 'Login', class: 'btn' ) %>
<% end %>