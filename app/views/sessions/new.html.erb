<%= form_tag session_path, class: 'form-horizontal' do %>
  <div class="control-group">
    <%= label_tag 'Name', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :name, placeholder: 'Name' %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag 'Name', class: 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, placeholder: 'Password' %>
    </div>
  </div>

  <%= submit_tag 'Login', class: 'btn' %>
<% end %>